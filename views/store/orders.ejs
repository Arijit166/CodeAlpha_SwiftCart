<script>
  function showConfirmation(orderId, productName, orderNumber) {
    console.log('Showing confirmation for:', orderId, productName); // Debug log
    
    // Populate modal data
    document.getElementById('productName').innerHTML = `<strong>${productName}</strong>`;
    document.getElementById('cancelForm').action = `/orders/delete/${orderId}`;
    
    // Show modal with animation
    const modal = document.getElementById('confirmationModal');
    const content = modal.querySelector('.transform');
    
    modal.classList.remove('hidden');
    
    // Force reflow before adding animation classes
    modal.offsetHeight;
    
    setTimeout(() => {
      content.classList.add('modal-show');
    }, 50);
  }

  function hideConfirmation() {
    const modal = document.getElementById('confirmationModal');
    const content = modal.querySelector('.transform');
    
    content.classList.remove('modal-show');
    
    setTimeout(() => {
      modal.classList.add('hidden');
    }, 300);
  }

  // Close modal when clicking outside
  document.getElementById('confirmationModal').addEventListener('click', function(e) {
    if (e.target === this) {
      hideConfirmation();
    }
  });

  // Close modal with Escape key
  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape' && !document.getElementById('confirmationModal').classList.contains('hidden')) {
      hideConfirmation();
    }
  });
</script>
